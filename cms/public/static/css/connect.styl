body
    background-color #f6f6f6
    font-size 14px
    margin 0px

.mtop16
    margin-top 16px
.box
    background-color #fff
    border-radius 8px 
    border 1px solid #d6d6d6
    position absolute 
    width  500px
    .btn-success
        width 100%
    .inside
        padding 16px
    .header
        text-align center
        font-family 'Times New Roman', Times, serif
        
    .footer
        text-align center
        a   
            display inline-block
            font-size .8em
            &:last-child
                margin-left 24px
       
      
       

.box-login
    left calc(50% - 250px)
    top calc(50% - 170px)

.box-register
    left calc(50% - 250px)
    top calc(50% - 310px)